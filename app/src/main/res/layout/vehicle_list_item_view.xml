<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4sp"
            android:paddingBottom="4sp"
            android:paddingRight="4sp">

            <TextView
                android:id="@+id/txt_index"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="C"
                android:textSize="@dimen/list_item_index"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="@color/primaryColor" />

            <com.soleap.cashbook.viewholder.widget.CircleImageView
                android:id="@+id/photo_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/kk" />

            <TextView
                android:id="@+id/short_name_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/list_item_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_dark"
                    android:maxLines="1"
                    android:text="Honda Dream 125cc - black - 2023"
                    android:textSize="@dimen/list_item_content"/>

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:maxLines="1"
                    android:text="$1500.00"
                    android:textColor="@color/red_light"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_light"
                        android:maxLines="1"
                        android:text="type"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_light"
                        android:maxLines="1"
                        android:text=" - "
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txt_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_light"
                        android:maxLines="1"
                        android:text="account"
                        android:textSize="13sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_light"
            android:visibility="gone"
            android:textAlignment="textEnd"
            android:textSize="9sp"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>

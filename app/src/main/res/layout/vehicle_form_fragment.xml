<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <TextView
        android:text="@string/general_info"
        android:paddingTop="15dp"
        android:textColor="@color/lite_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.soleap.cashbook.common.widget.StringEditText
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/name" />

    <com.soleap.cashbook.common.widget.doclookup.DocumentLookupInputView
        android:id="@+id/txt_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_doc_field_name="name"
        app:ev_doc_name="category"
        app:ev_endIconDrawable="@drawable/ic_arrow_down"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/category" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sw_enable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="true"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/gray_dark"
        android:text="@string/active"/>

    <TextView
        android:text="@string/account_and_price_info"
        android:textColor="@color/lite_blue"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.soleap.cashbook.common.widget.doclookup.DocumentLookupInputView
        android:id="@+id/txt_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_doc_field_name="name"
        app:ev_doc_name="account"
        app:ev_endIconDrawable="@drawable/ic_arrow_down"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/account" />

    <com.soleap.cashbook.common.widget.CurrencyEditText
        android:id="@+id/txt_price"
        android:layout_width="match_parent"
        app:ev_hint="@string/price"
        app:ev_helperText="@string/require"
        app:ev_errorEnabled="true"
        android:layout_height="wrap_content" />

    <com.soleap.cashbook.common.widget.CurrencyEditText
        android:id="@+id/txt_cost"
        android:layout_width="match_parent"
        app:ev_hint="@string/cost"
        app:ev_helperText="@string/require"
        app:ev_errorEnabled="true"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/vehicle_info"
        android:textColor="@color/lite_blue"
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"/>

    <com.soleap.cashbook.common.widget.doclookup.DocumentLookupInputView
        android:id="@+id/txt_maker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_doc_field_name="name"
        app:ev_doc_name="maker"
        app:ev_endIconDrawable="@drawable/ic_arrow_down"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/maker" />

    <com.soleap.cashbook.common.widget.doclookup.DocumentLookupInputView
        android:id="@+id/txt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_doc_field_name="name"
        app:ev_doc_name="type"
        app:ev_endIconDrawable="@drawable/ic_arrow_down"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/type" />

    <com.soleap.cashbook.common.widget.doclookup.DocumentLookupInputView
        android:id="@+id/txt_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_doc_field_name="name"
        app:ev_doc_name="condition"
        app:ev_endIconDrawable="@drawable/ic_arrow_down"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/condition" />

    <com.soleap.cashbook.common.widget.doclookup.DocumentLookupInputView
        android:id="@+id/txt_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_doc_field_name="name"
        app:ev_doc_name="color"
        app:ev_endIconDrawable="@drawable/ic_arrow_down"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/color" />

    <com.soleap.cashbook.common.widget.doclookup.DocumentLookupInputView
        android:id="@+id/txt_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_doc_field_name="name"
        app:ev_doc_name="model"
        app:ev_endIconDrawable="@drawable/ic_arrow_down"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/model" />

    <com.soleap.cashbook.common.widget.StringEditText
        android:id="@+id/txt_chassisNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/chassisnumber" />

    <com.soleap.cashbook.common.widget.StringEditText
        android:id="@+id/txt_machinenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/machinenumber" />

    <com.soleap.cashbook.common.widget.StringEditText
        android:id="@+id/txt_horsepower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/horsepower" />

    <com.soleap.cashbook.common.widget.IntegerEditText
        android:id="@+id/txt_production_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_errorEnabled="true"
        app:ev_helperText="@string/require"
        app:ev_hint="@string/production_year" />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/label"
        android:textSize="15sp"
        android:text="@string/paymenttype"/>

    <LinearLayout
        android:id="@+id/option_full_payment"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:tag="FULL_PAYMENT"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:text="@string/payment_option_full_payment"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BA7C7A7A"
            android:textSize="13sp"
            android:text="@string/full_payment_desc"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_installment_payment"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:tag="INSTALLMENT"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:text="@string/payment_option_installment"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BA7C7A7A"
            android:textSize="13sp"
            android:text="@string/installment_payment_desc"/>
    </LinearLayout>

</LinearLayout>
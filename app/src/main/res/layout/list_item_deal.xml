<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_deal_customer_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_deal_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/secondaryTextColor"
            android:maxLines="1"
            android:textSize="@dimen/title"
            android:text="ប៉េង បូរ៉ែន"/>

        <TextView
            android:id="@+id/txt_deal_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/secondaryTextColor"
            android:maxLines="1"
            android:text="1001"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/txt_deal_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/primaryColor"
            android:maxLines="1"
            android:text="26/12/2022"

            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_deal_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:text="$2,7000.00"
            android:textColor="@color/black_de"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_deal_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_de"
            android:textSize="10dp"
            android:text="@string/deal_status_new"/>

        <TextView
            android:id="@+id/txt_deal_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/status"
            android:textSize="10dp"
            android:text="@string/deal_status_loan"/>

    </LinearLayout>


    </LinearLayout>
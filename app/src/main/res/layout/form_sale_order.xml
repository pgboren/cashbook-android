<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cashbook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical"
    android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.soleap.cashbook.common.widget.CouponNumberInputView
                app:cnv_title="@string/offer_request_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/darker_gray"/>


            <com.soleap.cashbook.common.widget.DatePickerView
                app:dpv_title="@string/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/darker_gray"/>

            <com.soleap.cashbook.common.widget.DocLookUpInputView
                app:title="@string/branch"
                app:blank_message="@string/choose_a_branch"
                app:documentPhotoVisible="gone"
                app:documentName="branch"
                app:endIconDrawable="@drawable/ic_circile_angile_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/darker_gray"/>

            <com.soleap.cashbook.common.widget.DocLookUpInputView
                app:title="@string/customer"
                app:blank_message="@string/choose_a_customer"
                app:documentPhotoVisible="visible"
                app:documentName="contact"
                app:endIconDrawable="@drawable/ic_circile_angile_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/darker_gray"/>

            <com.soleap.cashbook.common.widget.DocLookUpInputView
                app:title="@string/institute"
                app:blank_message="@string/choose_a_institute"
                app:documentPhotoVisible="visible"
                app:documentName="institute"
                app:endIconDrawable="@drawable/ic_circile_angile_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.soleap.cashbook.widget.saleorder.SaleOrderItemsView
            app:div_title="@string/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>

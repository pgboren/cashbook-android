<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/gray_light"
        android:maxLines="1"
        android:text="@string/item"
        android:textStyle="bold"
        android:textSize="@dimen/title"/>

    <RelativeLayout
        android:id="@+id/btn_deal_form_item"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_corner"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/value_view_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imv_branch_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:src="@drawable/logo" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:text="ប៉េង បូរ៉ែន"
                android:textColor="@color/black_de"
                android:textSize="16sp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imv_cancel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:src="@drawable/ic_cancel" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_blank_value"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_circle_check"/>
            </LinearLayout>

            <TextView
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textColor="@color/primaryColor"
                android:maxLines="1"
                android:text="@string/choose_a_item"
                android:textSize="16sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fontFamily">@font/battambang</item>
        <item name="CustomChipChoiceStyle">@style/ChipCustomStyle</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="OutlinedCircleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">60dip</item>
        <item name="android:textColor">@color/black_de</item>
        <item name="iconTint">@color/red_light</item>
        <item name="strokeColor">@color/color_state_materialbutton</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="MenuItemTextFont">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/battambang</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="itemIconTint">@color/primaryColor</item>
        <item name="itemTextColor">@color/primaryColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:colorAccent">@color/black_de</item>
        <item name="android:textColorSecondary">@color/primaryDarkColor</item>

    </style>

    <style name="toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:fontFamily">@font/battambang</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="ChipCustomStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <!-- Base application theme. -->


</resources>
